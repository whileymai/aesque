{%- comment -%}
{%- endcomment -%}
<div class="tt-page__breadcrumbs">
	{% include 'breadcrumbs' %}
</div>
<div class="tt-empty">
	{%- if settings.page_404_media_type == 'icon_color' -%}
		<div class="tt-empty__svgicon">
			{% include 'icon-mogo-404-color' %}
		</div>
	{%- elsif settings.page_404_media_type == 'icon_grey' -%}
		<div class="tt-empty__svgicon">
			{% include 'icon-mogo-404-grey' %}
		</div>
	{%- else -%}
		{%- if settings.page404_image -%}
			<i class="tt-empty__icon">
				<img src="{{ settings.page404_image | img_url: '1920x' }}" alt="{{ 'general.404.title' | t }}">
			</i>
		{%- endif -%}
	{%- endif -%}
	<div class="text-center">
		<h1>{{ 'general.404.title' | t }}</h1>
		<p>{{ 'general.404.subtext_html' | t }}</p>
	</div>
	<div class="tt-empty__btn">
		<a href="/" class="btn">{{ 'general.404.button_text' | t }}</a>
	</div>
</div>