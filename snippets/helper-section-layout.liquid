{%- comment -%}
{%- endcomment -%}
{%- comment -%} ### MARGIN ### {%- endcomment -%}
{%- assign res-container_inline_style = '' -%}
{%- if section.settings.margin == 'demo2'%}
	{%- assign res-container_inline_style = ' style="margin: 100px auto 90px"' -%}
{%- endif -%}
{%- if section.settings.margin == 'custom'%}
	{%- assign res-container_inline_style = ' style="margin: ' | append: section.settings.margin-custom | append: '"' -%}
{%- endif -%}


{%- comment -%} ### PADDING ### {%- endcomment -%}
{%- assign this-padding_class = ' ttg-grid-padding--none' -%}
{%- assign res-item_inline_style = '' -%}
{%- if section.settings.padding == 'demo2'%}
	{%- assign this-padding_class = '' -%}
	{%- assign res-item_inline_style = 'style="padding: 0 12px 0 12px;"' -%}
{%- endif -%}
{%- if section.settings.padding == 'custom'%}
	{%- assign res-item_inline_style = 'style="padding:' | append: section.settings.padding-custom | append: '"' -%}
{%- endif -%}


{%- comment -%} ### WIDTH ### {%- endcomment -%}
{%- if section.settings.width == 'boxed' -%}
	{%- assign res-container_class = 'container' -%}
	{%- assign res-row_class = 'row ttg-grid-pdg-btm--sm' | append: this-padding_class -%}
{%- endif -%}
{%- if section.settings.width == 'fullwidth' -%}
	{%- assign res-container_class = 'container-fluid ttg-cont-padding--none' -%}
	{%- assign res-row_class = 'row ttg-grid-padding--none' | append: this-padding_class -%}
{%- endif -%}


{%- comment -%} ### Banners per row ### {%- endcomment -%}
{%- assign res-banners_per_row = 12 | divided_by: section.settings.inrow -%}