{%- comment -%}
{%- endcomment -%}
<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "Product",
  "description": "{{ product.description | truncatewords: 25 }}",
  "name": "{{ product.title }}",
  "image": "{{ product.featured_image | product_img_url: '480x' }}",
  "offers": {
    "@type": "Offer",
    "availability": "http://schema.org/{% if product.available %}InStock{% else %}OutOfStock{% endif %}",
	"price": "{{ loc-price | divided_by: 100.00 }}",
    "priceCurrency": "{{ shop.currency }}"
  }
}
</script>