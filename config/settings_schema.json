  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "General"
      },
      {
        "type": "font_picker",
        "id": "typography_headings_new",
        "label": "Headings",
        "default": "montserrat_n7"
      },
      {
        "type": "font_picker",
        "id": "typography_menus_new",
        "label": "Logo and menus",
