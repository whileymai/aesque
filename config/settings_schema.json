  {
    "name": "Product grid",
    "settings": [
      {
        "type": "select",
        "id": "product_animation",
        "label": "Desktop animation style",
        "options": [
          {
            "value": "one regular color--light",
            "label": "Popup"
          },
          {
            "value": "one alt color--light",
            "label": "Static"
          },
          {
            "value": "three regular color--light",
            "label": "Overlay"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "product_show_secondary",
        "label": "Show second product media on hover"
      },
      {
        "type": "select",
        "id": "thumb_resize",
        "label": "Product media aspect",
        "options": [
          {
            "value": "fill",
            "label": "Cropped"
          },
          {
            "value": "fit",
            "label": "Natural"
          }
        ]
      },
      {
        "type": "header",
        "content": "Product reviews",
        "info": "You need to install [Shopify's free Product Reviews app](https:\/\/apps.shopify.com\/product-reviews) before enabling this option."
      },
      {
        "type": "checkbox",
        "id": "show_reviews_badge",
        "label": "Show reviews badge",
        "default": false
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "32 x 32px .png required"
      }
    ]
  },
  {
    "name": "Cart page",
    "settings": [
      {
        "type": "select",
        "id": "cart_action",
        "label": "Cart type",
        "options": [
          {
            "value": "overlay",
            "label": "Drawer"
          },
          {
            "value": "no-overlay",
            "label": "Page"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "cart_additional_buttons",
        "label": "Show additional checkout buttons"
      },
      {
        "type": "checkbox",
        "id": "cart_notes_enable",
        "label": "Enable cart notes"
      }
    ]
  },
  {
    "name": "Embellishments",
