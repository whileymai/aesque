{%- comment -%}
{%- endcomment -%}
{%- if section.settings.layout == 'text' -%}
	{% include 'blogarticle-text' %}
{%- endif -%}

{%- if section.settings.layout == 'standart' -%}
	{% include 'blogarticle-standart' %}
{%- endif -%}

{% schema %}
{
"name": "Blog Article",
"settings": [
{
"type": "select",
"id": "content_layout",
"label": "Default content width",
"default": "fullwidth",
"options": [
{
"value": "fullwidth",
"label": "Full width"
},
{
"value": "boxed",
"label": "Boxed small"
}
]
},
{
"type": "select",
"id": "layout",
"label": "Select caption style",
"default": "text",
"options": [
{ "value": "text", "label": "Text" },
{ "value": "standart", "label": "Featured image on background" }
]
},
{
"type": "checkbox",
"id": "show_featured_image",
"label": "Show featured image after caption?",
"default": true,
"info": "Applied only for text type caption."
},
{
"type": "checkbox",
"id": "show_author",
"label": "Show author and date?",
"default": true
},
{
"type": "checkbox",
"id": "show_social_links",
"label": "Show social link icons?",
"default": true
},
{
"type": "checkbox",
"id": "show_addthis",
"label": "Show AddThis plugin?",
"default": true
}
]
}
{% endschema %}
