{
"name": "One Product Banner",
"settings": [
{
"type": "image_picker",
"id": "prod-banner-image",
"label": "Image"
},
{
"type": "text",
"id": "prod-banner-image-alt",
"label": "Image Alt text",
"default": "BuyNow Product!"
},
{
"type": "text",
"id": "prod-banner-text",
"label": "Text #1",
"default": "Lorem Ipsum Dolor Sit Amet Conse Ctetur Aadipisicing"
},
{
"type": "text",
"id": "prod-banner-text2",
"label": "Text #2",
"default": "Lorem ipsum dolor sit amet conse ctetur adipisicing elit, sed do eiusmod tempor incididunt ut labore"
},
{
"type": "text",
"id": "prod-banner-text-button",
"label": "Button text",
"default": "Shop Now!"
},
{
"type": "url",
"id": "prod-banner-url-button",
"label": "Button link"
},
{
"type": "header",
"content": "Layout options"
},
{
"label": "Width",
"id": "brands-sec-width",
"type": "select",
"default": "boxed",
"options": [
{
"value": "boxed",
"label": "Boxed"
},
{
"value": "fullwidth",
"label": "Full Width"
}
]
},
{
"label": "Margin",
"id": "brands-sec-margin",
"type": "select",
"default": "none",
"options": [
{
"value": "none",
"label": "None"
},
{
"value": "demo2",
"label": "Demo7"
},
{
"value": "custom",
"label": "Custom"
}
]
},
{
"label": "Custom Margin",
"id": "brands-sec-margin-custom",
"type": "text",
"default": "10px"
},
{
"type": "header",
"content": "Colors"
},
{
"type": "color",
"id": "color_text_01_c",
"label": "Text #1"
},
{
"type": "color",
"id": "color_text_02_c",
"label": "Text #2"
},
{
"type": "select",
"id": "color_btn_style",
"label": "Button style",
"default": "1",
"options": [
{ "value": "1", "label": "Type #1" },
{ "value": "2", "label": "Type #2" },
{ "value": "3", "label": "Type #3" },
{ "value": "4", "label": "Type #4" },
{ "value": "5", "label": "Type #5" },
{ "value": "6", "label": "Type #6" },
{ "value": "7", "label": "Type #7" },
{ "value": "8", "label": "Type #8" }
]
}
],
"presets": [
{
"name": "One Product Banner",
"category": "3) Products"
}
]
}
{% endschema %}
