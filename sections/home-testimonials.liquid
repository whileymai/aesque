{%- comment -%}
{%- endcomment -%}
{% if section.blocks.size > 0 %}

	{% comment %} ### MARGIN ### {% endcomment %}
	{% assign loc_margin_class = '' %}
	{% if section.settings.brands-sec-margin == 'demo2'%}
		{% assign loc_margin_class = ' tt-home__brands-01' %}
	{% endif %}
	{% if section.settings.brands-sec-margin == 'custom'%}
		{% capture res-style_custom_margin %} style="margin: {{ section.settings.brands-sec-margin-custom }};"{% endcapture %}
	{% endif %}

	{% comment %} ### WIDTH ### {% endcomment %}
	{% if section.settings.brands-sec-width == 'boxed' %}
		{% assign loc_container_class = 'container' | append: loc_margin_class %}
	{% endif %}
	{% if section.settings.brands-sec-width == 'fullwidth' %}
		{% assign loc_container_class = 'container-fluid ttg-cont-padding--none' | append: loc_margin_class %}
	{% endif %}


	<div data-section-id="{{ section.id }}" data-section-type="home-testimonials" class="tt-testimonials {{ loc_container_class }}"{{ res-style_custom_margin }}>
		{% if section.settings.testimonial-image != empty %}
			<div class="tt-testimonials__bg">
				<img src="{{ section.settings.testimonial-image | img_url: '1920x' }}" alt="{{ section.settings.testimonial-alt }}">
			</div>
		{% endif %}
		<div class="tt-testimonials__slider">
			{%- for block in section.blocks -%}
				{% include 'home-testimonials-item' %}
			{%- endfor -%}
		</div>

	</div>

{%- endif -%}
{%- if section.blocks.size == 0 -%}
	{% include 'no-blocks' %}
{%- endif -%}
